<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/buttonHome"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="Home" />
    <Button
        android:id="@+id/buttonSearchIdea"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="Search Idea By Title" />
    <Button
        android:id="@+id/buttonAddNewIdea"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="Add New Idea" />
    <Button
        android:id="@+id/buttonUserIdea"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="User Idea" />
    <Button
        android:id="@+id/buttonUserToDo"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="To Do Ideas" />
    <Button
        android:id="@+id/buttonUpdateProfile"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="Update Profile" />
    <Button
        android:id="@+id/buttonSignOut"
        style="@style/editTextStyle"
        android:layout_marginTop="15dp"
        android:background="@color/buttonColor"
        android:text="Sign Out" />
</LinearLayout>